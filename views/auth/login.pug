extends ../layouts/common
block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger= error

	form(method='POST')
		.form-group.mb-2
			label(for='txtEmail') Email
			input(name='email', type='text', id='txtEmail', class='form-control', value= email ? email : '', placeholder='Enter email')
		.form-group.mb-2
			label(for='txtPassword') Password
			input(name='password', type='password', id='txtPassword', class='form-control', placeholder='Enter password')
		button.btn.btn-primary(type='submit') Login