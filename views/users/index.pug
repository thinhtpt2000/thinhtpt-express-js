extends ../layouts/common
block content
	h1 
		span Users
		a.btn.btn-primary.ml-3(href='/users/create') Create
	.d-flex.align-items-center
		form.ml-auto(action='/users/search', method='GET', class='form-inline')
			.form-group.mb-2
				input(type='text', name='q', class='form-control', value=q, placeholder='Search by name . . .', required)
			button(class='btn btn-primary mb-2 ml-2') Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td
					img(src=user.avatar, width="30")
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href='/users/' + user.id) View